---
import DocIcon from "../icons/DocIcon.astro"
import WorldIcon from "../icons/WorldIcon.astro"



const {tittle} = Astro.props


---



<a href={Astro.props.link} target="_blank" class=`${Astro.props.class} flex flex-row w-fit relative p-0.5 mb-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg  bg-gradient-to-br from-orange-500 to-red-600 hover:from-orange-500 hover:to-red-600 hover:text-white dark:text-white focus:ring-4 focus:outline-none  focus:ring-yellow-400`>
    <span class="relative flex  px-3 py-1 gap-1 transition-all  ease-in-out  bg-slate-50/95 hover:bg-transparent hover:text-slate-100 text-slate-950 font-bold  dark:text-white dark:bg-gray-900 rounded-md dark:hover:bg-opacity-0  ">
        <h3>{tittle}</h3>
        {
            tittle !== 'Web' ? (<DocIcon />) :  (<WorldIcon />)
        }
        
        <slot />
    </span>
</a>